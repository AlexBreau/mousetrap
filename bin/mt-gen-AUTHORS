#!/usr/bin/env bash
(
    if [ -z "$1" ] ; then
        echo "$0: No out file specified."
        exit 1
    fi
    echo Generating "$1"
    source "$(dirname "$0")/mt-define-mousetrap-home"
    cd "$MOUSETRAP_HOME"
    echo "# Generated by `basename $0`" > "$1"
    echo "# Do not edit." >> "$1"
    echo "Commits Author" >> "$1"
    git shortlog -s -e -n | sed 's/@/ AT /g' | sed 's/\./ DOT /g' >> "$1"
)
